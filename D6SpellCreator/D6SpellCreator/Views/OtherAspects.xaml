<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D6SpellCreator.Views.OtherAspects"
             Title="Components">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button Text="Next" Clicked="ToGestures" HorizontalOptions="Fill"/>
                <StackLayout x:Name="Components">
                </StackLayout>
            <Button Text="Add" Clicked="AddComponent"></Button>
            <Label x:Name="SpellValue" HorizontalTextAlignment="End" VerticalTextAlignment="End" FontSize="Micro"  />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
        
</ContentPage>