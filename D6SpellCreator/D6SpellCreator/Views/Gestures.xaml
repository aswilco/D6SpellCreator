<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D6SpellCreator.Views.Gestures"
             Title="Gestures">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Next" Clicked="ToIncantations" HorizontalOptions="Fill"/>
            <StackLayout x:Name="GesturesStack">
                <Button x:Name="AddGesture" Text="Add Gesture" Clicked="AddGesture_Clicked"/>
            </StackLayout>
            <Label x:Name="SpellValue" HorizontalTextAlignment="End" VerticalTextAlignment="End" FontSize="Micro"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>