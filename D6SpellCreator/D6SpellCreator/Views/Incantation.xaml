<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D6SpellCreator.Views.Incantations"
             Title="Incantations">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="View" Clicked="Preview" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="IncantationStack">
                <Label Text="Incantation"/>
                <Entry x:Name ="IncantationEntry" Text="None" FontSize='Micro' />
                <Picker x:Name="IncantationComplexity"  FontSize="Micro" SelectedIndexChanged="IncantationChanged"></Picker>
                <Label Text="Offensive"></Label>
                <Switch x:Name="Offensive" Toggled="IncantationChanged"/>
                <Label Text="Foreign Language"></Label>
                <Switch x:Name="FL" Toggled="IncantationChanged"/>
                <Label Text="Loud"></Label>
                <Switch x:Name="Loud" Toggled="IncantationChanged"/>
                <Label x:Name="SpellValue" HorizontalTextAlignment="End" VerticalTextAlignment="End" FontSize="Micro"  />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>